{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nest-app/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nest-app/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nest-app",
  "projects": {
    "nest-app": {
      "type": "application",
      "root": "apps/nest-app",
      "entryFile": "main",
      "sourceRoot": "apps/nest-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nest-app/tsconfig.app.json"
      }
    },
    "demo-example": {
      "type": "application",
      "root": "apps/demo-example",
      "entryFile": "main",
      "sourceRoot": "apps/demo-example/src",
      "compilerOptions": {
        "tsConfigPath": "apps/demo-example/tsconfig.app.json"
      }
    },
    "nestjs-bootstrap": {
      "type": "library",
      "root": "libs/nestjs-bootstrap",
      "entryFile": "index",
      "sourceRoot": "libs/nestjs-bootstrap/src",
      "compilerOptions": {
        "tsConfigPath": "libs/nestjs-bootstrap/tsconfig.lib.json"
      }
    }
  }
}